<!DOCTYPE html>
<html>
  <head>
    <title>PoteShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-left-nav">
        <a href="/">
          <img src="/assets/logo.png" alt="サイトのロゴ画像">
        </a>

        <p>area </p>
        <p>keyword </p>
      </div>
      
      <div class="header-right-nav">
        <%= button_to "ログイン", "/users/sign_in", {method: :get} %>
        <%= button_to "登録する", "/users/sign_up", {method: :get} %>
      </div>

    </header>
    
    <%= yield %>
    
    <footer>
      <p>©︎ 2020 POTEPAN.INC.</p>
    </footer>
  </body>
</html>
