<div class="room-container-show">
  <div class="room-show-left-row">
    <%= image_tag @room.image.url, class: "room-show-image" %><br>
    
    <div class="room-show-detail">
      <%= render "shared/icon_image" %>
      
      <div class="room-show-profile">
        <%= @user.name %><br>
        <%= @user.introduction %>
      </div>
    </div>
    <p class="room-show-detail-content"><%= @room.introduction %></p>
  </div>
  
  <div class="room-show-right-row">
    <h5><%= "¥" + @room.price.to_s + "/日" %></h5>
    <div class="room-show-date-select">
      
      <%= form_with model: @reservation, local: true, url: confirm_reservations_path do |f| %>
        <%= f.label :start_day, "開始日" %><br>
        <%= f.date_field :start_day, placeholder: "年/月/日" %><br>
        
        <%= f.label :end_day, "終了日" %><br>
        <%= f.date_field :end_day, placeholder: "年/月/日" %><br>
        
        <%= f.label :number_of_people, "人数" %><br>
        <%= f.number_field :number_of_people %><br>
        
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :room_id, value: @room.id %>

        
        <%= f.submit "予約する" %>
        <% end %>

    </div>
  </div>
  
</div>
